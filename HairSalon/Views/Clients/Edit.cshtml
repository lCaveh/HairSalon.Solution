@{
  Layout = "_Layout";
}
<div class="container">
  <h1>To Do List</h1>
  <hr>
  <h2>Edit the client: @Model["client"].GetName()</h2>
  <form action="/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()" method="post">
    <label for="newName">Name:</label>
    <input type="text" name="newName" value="@Model["client"].GetName()">
    <label for="newPhone">Phone:</label>
    <input type="text" name="newPhone" value="@Model["client"].GetPhone()">
    <button type="submit">Edit</button>
  </form>
  <h4><a href="/stylists/@Model["stylist"].GetId()/clients/@Model["client"].GetId()">Return to previous page</a></h4>
</div>
