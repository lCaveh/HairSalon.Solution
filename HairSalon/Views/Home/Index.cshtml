@{
  Layout = "_Layout";
}
<div class="container">

  <h1>Specialities</h1>

  @if (@Model.Count == 0)
  {
    <h3>No specialities exist!</h3>
  }
  @foreach (var speciality in Model)
  {
    <h3><a href='/specialities/@speciality.GetId()'>@speciality.GetName()</a></h3>
    <p><a href='/specialities/@speciality.GetId()/delete'>Delete This Speciality</a></p>
    <br>
  }
  <p><a href='/'>Home Page</a></p>
</div>
