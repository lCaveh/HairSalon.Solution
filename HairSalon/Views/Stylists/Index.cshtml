@{
  Layout = "_Layout";
}
<div class="container">

  <h1>Stylists</h1>

  @if (@Model.Count == 0)
  {
    <h3>No stylists exist!</h3>
  }
  @foreach (var stylist in Model)
  {
    <h3><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h3>
    <p><a href='/stylists/@stylist.GetId()/delete'>Delete This Stylist</a></p>
    <br>
  }
  <p><a href='/'>Home Page</a></p>
</div>
